! Xcursor
!Xcursor.theme:
!Xcursor.size: 32

!!=============================================================================
!! RXVT-unicode setting
!!=============================================================================
!!$HOME/.Xdefaults
URxvt.preeditType:Root
URxvt.urgentOnBell:True
!!调整此处设置输入法
URxvt.inputMethod:fcitx
!!颜色设置
URxvt.depth:32
!!中括号内数表示透明度
URxvt.background:[85]#000505
URxvt.foreground:#a5a5a5
URxvt.colorBD:[90]Gray95
URxvt.colorUL:[90]Green
URxvt.color1:[90]Red2
URxvt.color4:[90]RoyalBlue
URxvt.color5:[90]Magenta2
URxvt.color8:[90]Gray50
URxvt.color10:[90]Green2
URxvt.color12:[90]DodgerBlue
URxvt.color14:[90]Cyan2
URxvt.color15:[90]Gray95
!!URL操作
URxvt.urlLauncher:google-chrome
URxvt.matcher.button:1
Urxvt.perl-ext-common:matcher
!!滚动条设置
URxvt.scrollBar:True
URxvt.scrollBar_right:True
URxvt.scrollBar_floating:False
URxvt.scrollstyle:plain
!!滚屏设置
URxvt.mouseWheelScrollPage:False
URxvt.scrollTtyOutput:False
URxvt.scrollWithBuffer:True
URxvt.scrollTtyKeypress:True
!!光标闪烁
URxvt.cursorBlink:True
URxvt.saveLines:3000
!!边框
URxvt.borderLess:False
URxvt.borderColor:#121222
!!Urxvt perl-lib
URxvt.perl-lib: ~/.urxvt/
!!Tabs shift + ↓ for new tab && vim-scrollback
!!URxvt.perl-ext-common: default,tabbed,vim-scrollback
!!URxvt.perl-ext-common: default,tabbed
!!vim-scrollback config
!!URxvt.vim-scrollback-paste: none
!!字体设置
Xft.dpi:96
URxvt.font:xft:Monospace:size=10:style=Regular:antialias=true,xft:WenQuanYi Micro Hei Mono:size=10:style=Regular:antialias=true
URxvt.boldfont:xft:Monospace:size=10:style=BOld:antialias=true,xft:WenQuanYi Micro Hei Mono:size=10:style=Bold:antialias=true
