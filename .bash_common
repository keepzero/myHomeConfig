# Common bash env for all dist

# Default PS1
PS1='[\u@\h \W]\$ '

# Set up PS1 prompt
if [[ `uname` == Linux* ]]; then
    BLUE=`tput setf 1`
    GREEN=`tput setf 2`
    CYAN=`tput setf 3`
    RED=`tput setf 4`
    MAGENTA=`tput setf 5`
    YELLOW=`tput setf 6`
    WHITE=`tput setf 7`
    #PS1='\[$GREEN\]\u@\h \[$WHITE\]\A \[$BLUE\]\w\[$GREEN\] \$\[$WHITE\] '
    #PS1='\[$GREEN\]\u@\h \[$BLUE\]\w\[$GREEN\] \$\[$WHITE\] '
    PS1='`a=$?;if [ $a -ne 0 ]; then a="  "$a; echo -ne "\[\e[s\e[1A\e[$((COLUMNS-2))G\e[31m\e[1;41m${a:(-3)}\e[u\]\[\e[0m\e[7m\e[2m\]"; fi`\[$GREEN\]\u@\h \[$BLUE\]\w\[$GREEN\] \$\[$WHITE\]\[\e[0m\] '
#elif [[ `uname` = CYGWIN* ]]; then
    #statements
#else
    #statements
fi

# Tab-completion
complete -cf sudo
complete -cf man

# set up editor
export EDITOR=/usr/bin/vim
export FCEDIT=/usr/bin/vim

# for awesome wm
export _JAVA_AWT_WM_NONREPARENTING="1"

# set completion-ignore-case on
bind `set completion-ignore-case on`

# set CDPATH
if [ -d "$HOME/Projects" ] ; then
    export CDPATH=.:$HOME:$HOME/Projects
fi
export CDPATH=.:$HOME

